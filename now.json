{
    "version": 2,
    "name": "bridge-ssr",
    "public": true,
    "builds": [
      { "src": "next.config.js", "use": "@now/next" },
      { "src": "server.js", "use": "@now/node-server" }
    ],
    "routes": [
      { "src": "^/static/(.*)", "dest": "/static/$1" },
      {
        "src": "https://bridgssrelive.wpengine.com/wp-json/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/$1"
      }
    ]
  }