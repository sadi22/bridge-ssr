{
  "version": 2,
  "name": "bridge-ssr",
  "builds": [
    {
      "src": "next.config.js",
      "use": "@now/next"
    }
  ],
  "routes": [
    {
      "src": "/(?<slug>[^/]+)$",
      "dest": "/page?slug=$slug"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    },
    {
      "src": "^/service-worker.js$",
      "dest": "/_next/static/service-worker.js",
      "headers": {
        "cache-control": "public, max-age=43200, immutable",
        "Service-Worker-Allowed": "/"
      }
    },
    {
      "src": "^/favicon.ico$",
      "dest": "/static/icons/favicon.ico",
      "headers": {
        "cache-control": "public, max-age=43200, immutable"
      }
    }
  ]
}